
@{
    ViewBag.Title = "AddStudentResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/angular/StudentResult.js"></script>

<div class="col-sm-12 col-md-12" ng-app="abcApp" ng-controller="abcCtrl">
    <div class="col-sm-12">
        <div class="row" style="background-color:snow; margin-top:20px;border-radius:20px;padding:5px;border:double">
            <div class="col-sm-6">
                <label>Batch Base Student Id</label><br />
                <select class="form-control" ng-model="StudentName" ng-options="q.StudentId as q.StudentName   for q in Studentlist">
                    <option value="" selected="selected">Select Student</option>

                </select>
            </div>
            <div class="col-sm-6">
                <label>Subject Name</label><br />
                <select class="form-control" ng-model="SchoolSubject" ng-options="p.SubjectId as p.SubjectName for p in Subjectlist">
                    <option value="" selected="selected">Select Subject</option>

                </select>
            </div>
            
            <div class="col-sm-6">
                <label>Number</label><br />
                <input ng-model="Number" class="form-control" type="number" placeholder="Number" />
            </div>


        </div>


    </div>
    <div class="row text-center" style="margin-top:10px;">
        <div class="col-sm-10">
            <input type="button" ng-show="Addbtnshow" class="btn btn-info" ng-click="AddStudentResult()" value="Add Student Result" />
            <input type="button" ng-show="updatebtnshow" class="btn btn-info" ng-click="UpdateStudentResult()" value="Update Student Result" />
        </div>
    </div>
    <div class="table-responsive" style="margin-top:20px; table-layout:fixed">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Serial</th>
                    <th>Student</th>
                    <th>Subject</th>
                    <th>Number</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
              
                <tr ng-repeat="item in StudentResultList">
                    <td>{{$index+1}}</td>
                    @*<td>{{item.ResultId}}</td>*@
                    <td>{{item.FirstName}} {{item.LastName}}</td>
                    <td>{{item.SubjectName}}</td>
                    <td>{{item.Number}}</td>

                    <td>
                        <button class="btn btn-sm btn-primary" ng-click="StudentEdit(item)">Edit</button>||
                        <button class="btn btn-sm btn-danger" ng-click="StudentDelete(item)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


</div>


